@inherits LayoutComponentBase


<div class="page">
   

    <main>
        <div class="top-row px-4">
            <h1>StockTracker</h1>
            <div class="nav-container">
                <button class="nav-page" @onclick="NavigateToHome">Home</button>
                <NavLink class="nav-link" href="/alerts">Alerts</NavLink>
                <NavLink class="nav-link" href="/">Home</NavLink>
                <button class="nav-page" @onclick="NavigateToAlerts">Alerts</button>
                <h1> </h1>
            </div>    
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{

    private void NavigateToAlerts()
    {
        Navigation.NavigateTo("/alerts");
    }

    private void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }
}